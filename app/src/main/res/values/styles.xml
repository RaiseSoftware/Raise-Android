<resources>

    <!-- Base application theme. -->
    <style name="Raise.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="alertDialogTheme">@style/AlertDialogStyle</item>
    </style>

    <style name="Intro.AppTheme" parent="Raise.AppTheme">
        <item name="colorPrimary">@color/introColorPrimary</item>
        <item name="colorPrimaryDark">@color/introColorPrimaryDark</item>
        <item name="colorControlNormal">@color/introColorPrimaryDark</item>
        <item name="colorControlActivated">@color/introColorPrimaryDark</item>
        <item name="android:windowBackground">@color/introColorPrimary</item>
    </style>

    <style name="Scanner.AppTheme"  parent="Intro.AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <style name="Pending.AppTheme" parent="Raise.AppTheme">
        <item name="colorPrimary">@color/pendingColorPrimary</item>
        <item name="colorPrimaryDark">@color/pendingColorPrimaryDark</item>
        <item name="colorControlNormal">@color/pendingColorPrimaryDark</item>
        <item name="colorControlActivated">@color/pendingColorPrimaryDark</item>
        <item name="android:windowBackground">@color/pendingColorPrimary</item>
    </style>

    <style name="Poker.AppTheme" parent="Raise.AppTheme">
        <item name="colorPrimary">@color/pokerColorPrimary</item>
        <item name="colorPrimaryDark">@color/pokerColorPrimaryDark</item>
        <item name="colorControlNormal">@color/pokerColorPrimaryDark</item>
        <item name="colorControlActivated">@color/pokerColorPrimaryDark</item>
        <item name="android:windowBackground">@color/pokerColorPrimary</item>
    </style>

    <style name="Splash.AppTheme" parent="Intro.AppTheme">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:buttonBarButtonStyle">@style/ButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/ButtonStyle</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonText">
        <item name="android:textSize">@dimen/text_button_size</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="BottomBarButton" parent="ButtonText">
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog_fragment</item>
        <item name="behavior_peekHeight">600dp</item>
    </style>

    <style name="BottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

</resources>
