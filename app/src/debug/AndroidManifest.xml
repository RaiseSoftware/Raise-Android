<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.cameronvwilliams.raise"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".RaiseApplicationDebug"
        android:allowBackup="false"
        android:label="@string/app_name"
        tools:replace="android:label, android:name, android:allowBackup"
        tools:ignore="GoogleAppIndexingWarning">
        <meta-data android:name="net.hockeyapp.android.appIdentifier" android:value="${HOCKEYAPP_APP_ID}" />

        <activity android:name=".ui.splash.SplashActivityDebug"
            android:theme="@style/Splash.AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.intro.IntroActivityDebug"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Intro.AppTheme"/>

        <activity android:name=".ui.intro.IntroActivity" tools:node="remove"/>
        <activity android:name=".ui.splash.SplashActivity" tools:node="remove"/>

    </application>

</manifest>